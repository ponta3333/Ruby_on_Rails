<div class="body">
 	<% if flash[:notice] %>
 	<div>
 		<%= flash[:notice] %>
 	</div>
 	<% end %>
	<div class="container">
		<%= render 'users/info', user: @user, book: @book %>
			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
						<tr>
							<td>
								<%= link_to user_path(book.user.id) do %>
								<%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "45x45", fallback: "no_image.jpg" %>
								<% end %>
							</td>
							<td><%= link_to "#{book.title}", book_path(book) %></td>
							<td><%= book.body %></td>
							<td colspan="3"></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>